{% block search %}
    <form action="searchUrl" method="get" class="search form-horizontal" role="form">

        <div class="row">
            <label for="url" class="col-xs-2 control-label">Url:</label>

            <div class="col-xs-10">
                <div class="input-group">
                    <input type="url" name="url" value="{{ url }}" id="url" class="form-control" placeholder="http://www.website.de/" />
                    <span class="input-group-btn">
                        <button class="btn btn-default" type="submit">
                            <span class="glyphicon glyphicon-search"></span>
                        </button>
                    </span>
                </div>
            </div>
        </div>
    </form>
{% endblock %}